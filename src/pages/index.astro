---
import Base from "@/layouts/Base.astro";
import { markdownify } from "@/lib/utils/textConverter";
import { Image } from "@astrojs/image/components";
import { getEntryBySlug } from "astro:content";


const homepage = await getEntryBySlug("homepage", "index");
const { Content } = await homepage.render();
const { title, description, meta_title, image, what_i_do } = homepage.data;
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}
>
  <section class="section">
    <div class="container">
      <div class="row md:gx-4">
        <div class="sm:col-5 md:col-4">
          {image && (
            <div class="img-cover mb-8">
              <Image
                src={image}
                width={295}
                height={295}
                alt={title}
                class="rounded-lg w-full"
              />
            </div>
          )}
        </div>
        <div class="sm:col-7 md:col-8">
          <h1 set:html={markdownify(title)} class="h3 mb-8" />

          <div class="content">
            <Content />
          </div>
        </div>
      </div>
    </div>
  </section>

  <style>
  .solid-button,.solid-button:visited {
      display: inline-block;
      width: 200px;
      height: 54px;
      text-align: center;
      text-decoration: none;
      outline: none;
      margin: 20px;
      position: relative;
      z-index: 2;
      background-color: rgba(0,0,0,0.7);
      border: 2px solid #333;
      color: #fff;
      line-height: 50px;
      box-sizing: border-box;
      transition: all 0.3s
  }

  .solid-button::before,.solid-button::after {
      position: absolute;
      z-index: -1;
      display: block;
      content: "";
      left: 0;
      width: 100%;
      height: 50%;
      background-color: rgba(0,0,0,0.7);
      box-sizing: border-box;
      transition: all 0.3s
  }

  .solid-button::before {
      top: 0
  }

  .solid-button::after {
      bottom: 0
  }

  .solid-button:hover {
      background-color: rgba(255,255,255,0.9);
      border-color: #59b1eb;
      color: #59b1eb
  }

  .solid-button:hover::before,.solid-button:hover::after {
      height: 0;
      background-color: #59b1eb
  }
  </style>
  <section class="section pt-0">
    <div class="container">
      <h3 class="page-heading mb-20 text-center">{what_i_do.title}</h3>
      <div class="row justify-center gy-4 text-center">
        {what_i_do.items.map((item: any) => (
          <div class="lg:col-4 md:col-6">
            <a href={item.link} class="solid-button">{item.title}</a>
          </div>
        ))}
      </div>
    </div>
  </section>
</Base>
