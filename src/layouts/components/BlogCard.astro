---
import { Image } from "astro:assets";
import config from "@/config/config.json";
import dateFormat from "@/lib/utils/dateFormat";
import { humanize, plainify, slugify } from "@/lib/utils/textConverter";
import { getDescription } from "@/lib/utils/contentDescription";
import { FaRegClock, FaRegFolder, FaRegUserCircle } from "react-icons/fa";

const {
  summary_length,
  blog_folder,
}: { summary_length: number; blog_folder: string } = config.settings;
const { data } = Astro.props;
const { title, image, date, author, categories } = data.data;
const description = await getDescription(data);
---

<div class="bg-body dark:bg-darkmode-body">
  {
    image && (
    <a href={`/blog/${data.slug}`}>
      <Image
        class="mb-6 w-full rounded object-cover"
        src={image}
        alt={title}
        width={445}
        height={230}
        style="aspect-ratio: 445 / 230"
      />
    </a>
    )
  }
  <h4 class="mb-3">
    <a href={`/blog/${data.slug}`}>
      {title}
    </a>
  </h4>
  <ul class="mb-4">
    <li class="mr-4 inline-block">
      <a href={`/blog/authors/${slugify(author)}/`}>
        <FaRegUserCircle className={"mr-2 -mt-1 inline-block"} />
        {humanize(author)}
      </a>
    </li>
    <li class="mr-4 inline-block">
      <FaRegFolder className={"mr-2 -mt-1 inline-block"} />
      {
        categories.map((category: string, index: number) => (
          <a href={`/blog/categories/${slugify(category)}/`}>
            {humanize(category)}
            {index !== categories.length - 1 && ","}
          </a>
        ))
      }
    </li>
    <li class="mr-4 inline-block">
      <FaRegClock className={"mr-2 -mt-1 inline-block"} />
      {dateFormat(date)}
    </li>
  </ul>
  <p class="mb-6">{plainify(description.slice(0, Number(summary_length)))}...</p>
  <a
    class="btn btn-outline-primary btn-sm"
    href={`/blog/${data.slug}`}
  >
    read more
  </a>
</div>
